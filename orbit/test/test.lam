define-signature combine {
    synthesise T {
        receiver T
        parameter T
        parameter T
        return T
    }
}

define-constraint Semigroup {
    pop-type T
    conforms combine T
}

define-type Foo {
    define-signature combine {
        receiver Foo
        parameter Foo
        parameter Foo
        return Foo
    }
}

check-constraint Foo Semigroup
